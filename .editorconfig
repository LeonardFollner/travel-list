# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# every file
[*]
end_of_line = lf
trim_trailing_whitespace = true
indent_style = space
insert_final_newline = true
charset = utf-8

# HTML
[*.html]
indent-size = 4

# JavaScript and Styles
[*.{js,css,scss}]
indent_size = 4
